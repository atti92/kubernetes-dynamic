root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.har,*.json}]
indent_size = 2

[{*.yaml,*.yml}]
indent_size = 2

[LICENSE]
indent_size = unset

[.gitignore]
max_line_length = 400

[GitVersion.yml]
max_line_length = 180

[README.md]
max_line_length = 180

[tox.ini]
max_line_length = 180
